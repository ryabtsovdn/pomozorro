{
  "manifest_version": 3,
  "name": "PomoZorro",
  "version": "1.0",
  "description": "Just yet another pomodoro timer",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png",
    "256": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png"
    },
    "default_title": "PomoZorro",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html"
}
